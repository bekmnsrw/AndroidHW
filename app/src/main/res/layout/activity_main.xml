<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chmonya_cat"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/btn_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account_add"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_line1" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintBottom_toTopOf="@id/tv_line1"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C2C2"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        android:layout_marginTop="8dp"
        app:layout_goneMarginTop="39.5dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="@id/tv_line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/img_profile"
        app:strokeColor="#05D56F"
        app:strokeWidth="4dp" />

    <TextView
        android:id="@+id/tv_posts_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="@id/img_profile"
        app:layout_constraintLeft_toRightOf="@id/img_profile"
        app:layout_constraintRight_toLeftOf="@id/tv_followers_number"
        app:layout_goneMarginTop="16dp"
        app:layout_goneMarginStart="136dp" />

    <TextView
        android:id="@+id/tv_followers_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9 765"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/img_profile"
        app:layout_constraintLeft_toRightOf="@id/tv_posts_number"
        app:layout_constraintRight_toLeftOf="@+id/tv_followings_number"
        app:layout_goneMarginTop="16dp" />

    <TextView
        android:id="@+id/tv_followings_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="285"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_followers_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_profile"
        app:layout_goneMarginTop="16dp" />

    <TextView
        android:id="@+id/tv_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="posts"
        android:textSize="15sp"
        android:textColor="#C6C2C2"
        app:layout_constraintEnd_toEndOf="@+id/tv_posts_number"
        app:layout_constraintStart_toStartOf="@+id/tv_posts_number"
        app:layout_constraintTop_toBottomOf="@id/tv_posts_number" />

    <TextView
        android:id="@+id/tv_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="followers"
        android:textSize="15sp"
        android:textColor="#C6C2C2"
        app:layout_constraintEnd_toEndOf="@+id/tv_followers_number"
        app:layout_constraintStart_toStartOf="@+id/tv_followers_number"
        app:layout_constraintTop_toBottomOf="@id/tv_followers_number" />

    <TextView
        android:id="@+id/tv_followings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="followings"
        android:textSize="15sp"
        android:textColor="#C6C2C2"
        app:layout_constraintEnd_toEndOf="@+id/tv_followings_number"
        app:layout_constraintStart_toStartOf="@+id/tv_followings_number"
        app:layout_constraintTop_toBottomOf="@id/tv_followings_number" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#67A5F4"
        android:text="Follow"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tv_followings_number"
        app:layout_constraintStart_toEndOf="@+id/img_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_followers"
        app:layout_goneMarginStart="152dp" />

    <ImageView
        android:id="@+id/btn_drop_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#67A5F4"
        android:src="@drawable/arrow_drop_down"
        android:background="@drawable/rounded_bg"
        app:layout_constraintBottom_toBottomOf="@+id/btn_follow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_follow"
        app:layout_constraintTop_toTopOf="@+id/btn_follow" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chmonya"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toStartOf="@id/img_profile"
        app:layout_goneMarginTop="144dp"
        app:layout_goneMarginStart="16dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="curious kitten"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do u want to see my photos?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_name" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_relevant1"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/relevant1"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_relevant2"
        android:layout_marginStart="16dp"
        app:strokeColor="#C6C2C2"
        app:strokeWidth="2dp"
        android:padding="2dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_relevant2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/relevant2"
        app:layout_constraintTop_toTopOf="@id/img_relevant1"
        app:layout_constraintLeft_toRightOf="@id/img_relevant1"
        app:layout_constraintRight_toLeftOf="@id/img_relevant3"
        app:strokeColor="#C6C2C2"
        app:strokeWidth="2dp"
        android:padding="2dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_relevant3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/relevant3"
        app:layout_constraintTop_toTopOf="@id/img_relevant1"
        app:layout_constraintLeft_toRightOf="@id/img_relevant2"
        app:layout_constraintRight_toLeftOf="@id/img_relevant4"
        app:strokeColor="#C6C2C2"
        app:strokeWidth="2dp"
        android:padding="2dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_relevant4"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/relevant4"
        app:layout_constraintTop_toTopOf="@id/img_relevant1"
        app:layout_constraintLeft_toRightOf="@id/img_relevant3"
        app:layout_constraintRight_toLeftOf="@id/img_relevant5"
        app:strokeColor="#C6C2C2"
        app:strokeWidth="2dp"
        android:padding="2dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_relevant5"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/relevant5"
        app:layout_constraintTop_toTopOf="@id/img_relevant1"
        app:layout_constraintLeft_toRightOf="@id/img_relevant4"
        app:layout_constraintRight_toLeftOf="@id/img_relevant6"
        app:strokeColor="#C6C2C2"
        app:strokeWidth="2dp"
        android:padding="2dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_relevant6"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/relevant6"
        app:layout_constraintTop_toTopOf="@id/img_relevant1"
        app:layout_constraintLeft_toRightOf="@id/img_relevant5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:strokeColor="#C6C2C2"
        app:strokeWidth="2dp"
        android:padding="2dp" />

    <TextView
        android:id="@+id/tv_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C2C2"
        app:layout_constraintTop_toBottomOf="@id/img_relevant1"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/btn_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/table"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_list"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:tint="#C6C2C2" />

    <ImageView
        android:id="@+id/btn_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/list"
        app:layout_constraintTop_toTopOf="@id/btn_table"
        app:layout_constraintLeft_toRightOf="@id/btn_table"
        app:layout_constraintRight_toLeftOf="@+id/btn_photos_with_me"
        app:tint="#C6C2C2" />

    <ImageView
        android:id="@+id/btn_photos_with_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photos_with_me"
        app:layout_constraintTop_toTopOf="@id/btn_table"
        app:layout_constraintLeft_toRightOf="@id/btn_list"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="#C6C2C2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/img_photo1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/photo1"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/guideline_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_center"/>

    <ImageView
        android:id="@+id/img_photo2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/photo2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_center"
        app:layout_constraintEnd_toEndOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@id/img_photo1" />

    <ImageView
        android:id="@+id/img_photo3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/photo3"
        app:layout_constraintTop_toTopOf="@id/img_photo1"
        app:layout_constraintStart_toStartOf="@id/guideline_right"
        app:layout_constraintBottom_toBottomOf="@id/guideline_center"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_photo4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/photo4"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="@+id/guideline_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_center" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        app:layout_constraintTop_toTopOf="@id/guideline_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_search"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:tint="#C6C2C2" />

    <ImageView
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search"
        app:layout_constraintTop_toTopOf="@id/btn_home"
        app:layout_constraintLeft_toRightOf="@id/btn_home"
        app:layout_constraintRight_toLeftOf="@+id/btn_add"
        app:tint="#C6C2C2" />

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        app:layout_constraintTop_toTopOf="@id/btn_home"
        app:layout_constraintLeft_toRightOf="@id/btn_search"
        app:layout_constraintRight_toLeftOf="@+id/btn_favorites"
        app:tint="#C6C2C2" />

    <ImageView
        android:id="@+id/btn_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorites"
        app:layout_constraintTop_toTopOf="@id/btn_home"
        app:layout_constraintLeft_toRightOf="@id/btn_add"
        app:layout_constraintRight_toLeftOf="@+id/btn_profile"
        app:tint="#C6C2C2" />

    <ImageView
        android:id="@+id/btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="@id/btn_home"
        app:layout_constraintLeft_toRightOf="@id/btn_favorites"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="32dp"
        app:tint="#C6C2C2" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:backgroundTint="#67A5F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_photo3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp"
        app:layout_constraintHorizontal_bias="0.71"/>

</androidx.constraintlayout.widget.ConstraintLayout>